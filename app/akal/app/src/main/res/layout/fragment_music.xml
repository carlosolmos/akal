<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.metistd.akal.MusicFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgMusicIcon"
            android:layout_width="236px"
            android:layout_height="236px"
            android:layout_marginTop="64dp"
            android:layout_weight="1"
            android:src="@drawable/note"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/musicControllers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/imgRewind"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_weight="1"
                android:src="@drawable/rewind"/>

            <ImageView
                android:id="@+id/imgPause"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_weight="1"
                android:src="@drawable/pause" />

            <ImageView
                android:id="@+id/imgForward"
                android:layout_width="96px"
                android:layout_height="96px"
                android:layout_weight="1"
                android:src="@drawable/forward" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:textStyle="italic"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>
